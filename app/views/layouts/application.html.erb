<!DOCTYPE html>
<html>
  <head>
    <title>Bbooking</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render "layouts/header" %>
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <!-- Devise gem settings -->
          <!--<p class="notice text-info notshown"><= notice %></p>-->
          <!-- TODO add some alert styles & make 'notice' notifications disappearing -->
          <p class="alert text-danger text-center notshown"><%= alert %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4 col-sm-push-4">
          <%= yield %>
        </div>
      </div>
    </div>
    <%= render "layouts/footer" %>
  </body>
</html>
