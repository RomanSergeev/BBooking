<%= form_for profile do |f| %>
  <div class="field form-group">
    <%= f.label :name %>
    <!--TODO reorganize for better readability-->
    <% if profile.errors[:name].any? %>
      <span class="label label-warning" data-toggle="popover" data-trigger="hover"
            data-content="<%= profile.errors[:name][0] %>" data-original-title="Warning">!</span>
    <% end %>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :phone %>
    <% if profile.errors[:phone].any? %>
      <span class="label label-warning" data-toggle="popover" data-trigger="hover"
            data-content="<%= profile.errors[:phone][0] %>" data-original-title="Warning">!</span>
    <% end %>
    <%= f.text_field :phone, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :country %>
    <%= f.text_field :country, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :city %>
    <%= f.text_field :city, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <%= f.submit 'Apply', class: 'btn btn-primary' %>

<% end %>