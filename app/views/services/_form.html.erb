<%= form_for(service) do |f| %>
  <% if service.errors.any? %>
    <div id="error_explanation" class="notshown">
      <h2><%= pluralize(service.errors.count, 'error') %>
        prohibited this service from being saved:</h2>

      <ul>
      <% service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% name = service.servicedata['name'] %>
  <% duration = service.servicedata['duration'] || 15 %>
  <% description = service.servicedata['description'] %>

  <label for="service[servicedata][name]">Service name</label>
  <input type="text"
         id="service[servicedata][name]"
         name="service[servicedata][name]"
         class="form-control"
         value="<%= name %>" />
  <br/>
  <label for="service[servicedata][duration]">Average duration</label>
  <input type="number"
         id="rangeDoubler"
         name="rangeDoubler"
         min="1"
         max="120"
         value="<%= duration %>" />
  minutes
  <input type="range"
         id="service[servicedata][duration]"
         name="service[servicedata][duration]"
         min="1"
         max="120"
         class="form-control"
         value="<%= duration %>" />
  <br/>
  <label for="service[servicedata][description]">You may add some description here</label>
  <span class="label label-info" data-toggle="popover" data-trigger="hover"
        data-content="You don't have to write out your personal info (phone, address, etc.) here; it is seen from your profile page." data-original-title="Info">!</span>
  <textarea maxlength="500" id="service[servicedata][description]" name="service[servicedata][description]" rows="6" class="form-control" style="resize: none"><%= description %></textarea>
  <br/>
  <%= f.submit %>
<% end %>
