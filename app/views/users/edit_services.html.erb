<div class="row">
  <div class="col-sm-10">
    <% if @services.empty? %>
        No services have been added yet.<br/>
    <% else %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Service name</th>
            <th>Service duration</th>
          </tr>
        </thead>
        <tbody>
        <% @services.each do |service|
          name = service.servicedata && service.servicedata['name'] || ''
          duration = service.servicedata && service.servicedata['duration'] || '' %>
          <tr>
            <td><%= name %></td>
            <td><%= "#{duration} minutes" %></td>
            <td><%= link_to 'View', service_path(service) %></td>
            <td><%= link_to 'Edit', edit_service_path(service) %></td>
            <td><%= link_to 'Delete',
                            service_path(service),
                            method: :delete,
                            data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
  <div class="col-sm-2 edit-buttons">
    <%= link_to 'New service', new_service_path %>
  </div>
</div>