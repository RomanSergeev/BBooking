<div class="row">
  <div class="col-sm-10">
    <% if @services.empty? %>
        No services of this user are available.<br/>
    <% else %>
        <table class="table table-striped table-hover">
          <thead>
          <tr>
            <th>Service name</th>
            <th>Service duration</th>
          </tr>
          </thead>
          <tbody>
          <% @services.each do |service|
            name = service.servicedata && service.servicedata['name'] || ''
            duration = service.servicedata && service.servicedata['duration'] || '' %>
              <tr>
                <td><%= name %></td>
                <td><%= "#{duration} minutes" %></td>
                <td><%= link_to 'View', service_path(service), class: 'btn btn-primary' %></td>
                <!--TODO change welcome_index_path when booking will be ready-->
                <td><%= link_to 'Book', welcome_index_path, class: 'btn btn-primary' %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
    <% end %>
  </div>
  <div class="col-sm-2 edit-buttons">
    <%= link_to 'Back to ' + @user.profile.personaldata['name'] + '\'s page', user_path(@user), :class => 'btn btn-primary' %>
    <br/><br/>
    <%= link_to 'My homepage', user_path(current_user), :class => 'btn btn-primary' %>
  </div>
</div>