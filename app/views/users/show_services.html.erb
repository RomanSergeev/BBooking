<div class="row with-user-links">
  <div class="col-sm-10">
    <% if @services.empty? %>
      No services of this user are available.
      <br/>
    <% else %>
      <table class="table table-striped table-hover">
        <thead>
        <tr>
          <th>Service name</th>
          <th>Service duration</th>
        </tr>
        </thead>
        <tbody>
        <% @services.each do |service| %>
          <tr>
            <td><%= format_name(service) %></td>
            <td><%= format_duration(service) %></td>
            <td><%= link_to 'View', service_path(service) %></td>
            <td><%= link_to 'Book', book_service_path(service) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
  <div class="col-sm-2 edit-buttons">
    <%= link_to 'Back to ' + @user.profile.personaldata['name'] + '\'s page',
                user_path(@user) %>
  </div>
</div>